                                        +post("gallery12","Hội KTS Việt Nam ký kết hợp tác năm 2024 với Công ty CP kinh doanh gạch ốp lát Viglacera")
                        +box-navi("fas fa-angle-left","fas fa-angle-right")
                    .news_new--btn(data-aos="fade-up")   
                        +btn("XEM THÊM..","","","tran2s")
    section.news_kt 
