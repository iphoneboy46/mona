extends layout/layout
block vars
    -title = 'TIn tức-sự kiện'
    -mainClass = 'pt'
    -bodyClass = ''
    -hdClass = ''
    -ftClass = ''
    -jsLibs = [JsJquery,JsAos,JsSwiper,JsGsap,JsGsapScroll,JsFancybox]
    -jsComponents = ['header','gsap']
    -cssLibs = [fontAWS,fontAWS2,CssAos,CssSwiper,CssFancybox]
    -cssComponents = ["banner","post"]
    -cssPages = ["news"]

block container
    section.bg_tt.custom.bgGsap
        .bg_tt--bg
        +img("bg.png")
    +banner-main("Trang chủ","","TIn tức-sự kiện","TIn tức-sự kiện")
    section.banner_qc
        .container
            .banner_qc--wrap(data-aos="zoom-out" data-aos-delay="1200") 
                .banner_qc--img 
                    +img("qcbg.png")
    section.news_new.free-slide 
        .container 
            .news_new--wrap
                h2.title-mn.cl-white.fw-6.t-up(data-aos="fade-up") Tin TỨC MỚI NHẤT
                .news_new--box 
                    .news_new--list.d-wrap(data-aos="fade-up") 
                        .swiper.mySwiper.--loop.--auto 
                            .swiper-wrapper 
                                .swiper-slide.d-item.d-2 
                                    .news_new--item 
                                        +post("gallery9","Hội KTS Việt Nam ký kết hợp tác năm 2024 với Công ty CP kinh doanh gạch ốp lát Viglacera")
                                .swiper-slide.d-item.d-2 
                                    .news_new--item 
                                        +post("gallery10","Hội KTS Việt Nam ký kết hợp tác năm 2024 với Công ty CP kinh doanh gạch ốp lát Viglacera")
                                .swiper-slide.d-item.d-2 
