                                                .swiper-slide.d-item
                                                    label.box_tabs--item 
                                                        input(type="radio" name="filter1")
                                                        .box_tabs--item-wrap 
                                                            p.note-md.cl-white.t-up QTUXNNKT
                                                .swiper-slide.d-item
