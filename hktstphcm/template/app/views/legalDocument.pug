                                                .swiper-slide.d-item
                                                    label.box_tabs--item 
                                                        input(type="radio" name="filter1")
                                                        .box_tabs--item-wrap 
                                                            p.note-md.cl-white.t-up TÍCH ĐIỂM CDP
                                        .swiper-scrollbar
                            .box_tabs.cus.free-slide2
                                .box_tabs--wrap
                                    .box_tabs--list.d-wrap
                                        .swiper.mySwiper 
                                            .swiper-wrapper 
                                                .swiper-slide.d-item
