.menu_mb
    .menu_mb--ex
        i.far.fa-times
    .menu_mb--wrap
        .menu_mb--nav
            a.menu_mb--logo(href="")
                +img("logoMB.png")
            ul.menu-list
                -
                    const mbs = [
                        {
                            title:"Trang chủ",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"Về chúng tôi",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"Thực đơn",
                            dropdown:true,
                            search:false
                        },
                        {
                            title:"Tuyển dụng",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"Đặt tiệc",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"Khuyến mãi",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"IN Rewards",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"Cơ hội nghề nghiệp",
                            dropdown:false,
                            search:false
                        },
                        {
                            title:"Liên hệ",
                            dropdown:false,
                            search:false
                        }
                    ]
                each mb , i in mbs
                    if mb.dropdown === true
                        li.menu-item.dropdown
                            a(href="#").menu-link #{mb.title}
                            ul.menu-list
                                li.menu-item.dropdown
                                    a(href="").menu-link Menu 1
                                    ul.menu-list
                                        li.menu-item
                                            a(href="").menu-link Item Menu 1
                                        li.menu-item
                                            a(href="").menu-link Item Menu 1
                                        li.menu-item
                                            a(href="").menu-link Item Menu 1
                                        li.menu-item
                                            a(href="").menu-link Item Menu 1
                                li.menu-item.dropdown
                                    a(href="").menu-link Menu 2
                                    ul.menu-list
                                        li.menu-item
                                            a(href="").menu-link Item Menu 2
                                        li.menu-item
                                            a(href="").menu-link Item Menu 2
                                        li.menu-item
                                            a(href="").menu-link Item Menu 2
                    else if mb.search === true
                        li.menu-item.btn-search
                            a(href="#").menu-link #{mb.title}
                    else if i == 0
                        li.menu-item.current-menu-item
                            a(href="#").menu-link #{mb.title}
                    else
                        li.menu-item
                            a(href="#").menu-link #{mb.title}
        .menu_mb--info
            .menu_mb--info-item
                button.btn.btn-search 
                    span.btn-text  Tìm kiếm
                .menu_mb--info-title
                    p.note-text.cl-text Theo dõi chúng tôi tại
                .social
                    ul.social_list
                        li.social_item
                            a(href="").social_link 
                                span.social_img
                                    +img("sic1.png")
                        li.social_item
                            a(href="").social_link 
                                span.social_img
                                    +img("sic2.png")
                        li.social_item
                            a(href="").social_link 
                                span.social_img
                                    +img("sic3.png")
                        li.social_item
                            a(href="").social_link 
                                span.social_img
                                    +img("sic4.png")

.menu_mb--modal