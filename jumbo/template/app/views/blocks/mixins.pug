mixin menuFoodItem(name,best,linkImgFood1,linkImgFood2,index,price,lang1,lang2)
  .menuFood_item 
    .menuFood_item--wrap 
      .menuFood_item--top 
        .menuFood_item--top-lf 
          h3.note-text.cl-text.t-up.fw-5 #{name}
          if(best != "" || linkImgFood1 != "" && linkImgFood2 != "")
            ul.menuFood_ref--list
              if(best != "")
                li.menuFood_ref--item 
                  .menuFood_ref--item-wrap 
                    span.ic 
                      +img("mnfic1.png")
                    p.note-sm.cl-text3 Best seller
              if(linkImgFood1 != "" && linkImgFood2 != "")
                li.menuFood_ref--item 
                  .menuFood_ref--item-wrap 
                    span.ic.openImgs 
                      +img("mnfic2.png")
                    p.note-sm.cl-text3 Hình ảnh món ăn
                    .menuFood_ref--imgs.gallery 
                      a(href=`./assets/images/${linkImgFood1}` data-fancybox=`gallery${index}`).menuFood_ref--img
                        +img(linkImgFood1)
                      a(href=`./assets/images/${linkImgFood2}` data-fancybox=`gallery${index}`).menuFood_ref--img
                        +img(linkImgFood2)
        .menuFood_item--top-ct 
          span.line
        .menuFood_item--top-rt 
          p.note-text.cl-text #{price}
      .menuFood_item--bottom 
        p.note-sm.cl-text3 #{lang1}
        p.note-sm.cl-text3 #{lang2}