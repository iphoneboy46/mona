

mixin img(name = "banner.jpg")
  img(src="./assets/images/" + name, alt="")


mixin imgIc(name = "ic.png")
  img(src="./assets/images/icons/" + name, alt="")


mixin pagination()
  ul.page-numbers
    li
      span.page-numbers.prev 
        i.fas.fa-chevron-left
    li
      span.page-numbers.current 1
    li
      a.page-numbers(href='') 2
    li
      a.page-numbers(href='') ...
    li
      a.page-numbers(href='') 9
    li
      a.page-numbers(href='') 10
    li
      span.page-numbers.next 
        i.fas.fa-chevron-right



mixin box-navi(leftIc,rightIc)
  .box-navi
    .btn-navi.prev 
      i(class=leftIc)
    .btn-navi.next 
      i(class=rightIc)


mixin banner-main(img,title)
  .banner_main 
    .banner_main--bg 
      +img(img)
    .container  
      .banner_main--wrap 
        .banner_main--box
          .banner_main--box-title
            h1.title-lg.cl-white.fw-7.fl-sec.t-center #{title}

mixin btn(name,button,classIc,type)
  if(button != "button")
    a.btn(href="",class=type)
      span.btn-text #{name}
      if(classIc)
        span.btn-ic
          i(class=classIc)  
  else
    button.btn(class=type) 
      span.btn-text #{name}
      if(classIc)
        span.btn-ic
          i(class=classIc)


mixin Popup(classCustom)
  .popup(class=classCustom, data-popup="")
    .popup-wrapper 
      block



mixin breadcrumbs(page1,page2,pageCurrent)
  .breadcrumbs
    ul.breadcrumbs-list
      if (page2 == "")
        li.breadcrumbs-item
          a.breadcrumbs-link(href='') #{page1}  
        li.breadcrumbs-item.current-item
          a.breadcrumbs-link(href='') #{pageCurrent}
      else 
        li.breadcrumbs-item
          a.breadcrumbs-link(href='') #{page1}  
        li.breadcrumbs-item
          a.breadcrumbs-link(href='') #{page2}   
        li.breadcrumbs-item.current-item
          a.breadcrumbs-link(href='') #{pageCurrent}  





mixin post(img,title,content)
  .post
    .post_wrap
      .post_lf
        .post_lf--wrap
          a(href="").post_img
            +img(img)
      .post_rt
        .post_rt--wrap
          .box-info 
            .box-info-list 
              .box-info-item 
                span.ic 
                  i.far.fa-user
                a(href="").note-text.cl-text.fw-6 Admin
              .box-info-item 
                span.ic 
                  i.far.fa-clock
                p.note-text.cl-text3 12:52 - 20.04.2024
          .post_box
            h3.cl-text.title.fw-6.title-mn
              a(href="") #{title}
            p.note-text.cl-gray3.content #{content}
          .post_btn 
            +btn("Khám phá ngay","","fal fa-arrow-right","cl-8")

