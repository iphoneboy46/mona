block vars
    -title = 'Template'
    -mainClass = ''
    -bodyClass = ''
    -hdClass = ''
header.header(class=hdClass)
    .container 
        .header_wrap
            .header_lf
                .header_mobi.btn-mobi
                    span.line
                    span.line  
                    span.line  
                a(href="").header_logo
                    +img("logoHD.png")
            .header_ct
                .header_nav
                    ul.menu-list
                        -
                            const hd1s = [
                                {
                                    title:"sản phẩm",
                                    dropdown:false,
                                    mega:true
                                },
                                {
                                    title:"tin tức",
                                    dropdown:false,
                                    mega:false
                                },
                                {
                                    title:"VỀ NIC",
                                    dropdown:false,
                                    mega:false
                                },
                                {
                                    title:"chính sách",
                                    dropdown:true,
                                    mega:false
                                }
                            ]
                        each hd , i in hd1s
                            if hd.dropdown === true && hd.mega === false
                                li.menu-item.dropdown
                                    a(href="#").menu-link #{hd.title}
                                    .menu-hanh
                                        .container
                                            .menu-hanh-list 
                                                .menu-hanh-item
                                                    .menu-hanh-item-wrap
                                                        p.note-lg.fw-7 Title
                                                        ul.menu-list
                                                            li.menu-item
                                                                a(href="").menu-link Item 1
                                                            li.menu-item
                                                                a(href="").menu-link Item 2
                                                            li.menu-item
                                                                a(href="").menu-link Item 3
                            else if  hd.dropdown === false && hd.mega === true
                                li.menu-item.dropdown
                                    a(href="#").menu-link #{hd.title}
                                    .menu-mega 
                                        .container 
                                            .menu-mega-wrap 
                                                .menu-mega-list.scroll-main 
                                                    .menu-mega-item 
                                                        .menu-mega-item-wrap 
                                                            .menu-mega-item-title 
                                                                a(href="").title-sm.fw-7.cl-white.fl-sec.fw-i NÓN BẢO HIỂM 3/4
                                                                +btn("xEM TẤT CẢ","","","")
                                                            .menu-mega-item-list.d-wrap
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("sale")
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("sale")
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("")
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("")
                                                    .menu-mega-item 
                                                        .menu-mega-item-wrap 
                                                            .menu-mega-item-title 
                                                                a(href="").title-sm.fw-7.cl-white.fl-sec.fw-i NÓN BẢO HIỂM 3/4
                                                                +btn("xEM TẤT CẢ","","","")
                                                            .menu-mega-item-list.d-wrap
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("sale")
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("sale")
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("")
                                                                .menu-mega-item-item.d-item.d-4 
                                                                    +product("")
                            else if i == 1
                                li.menu-item.current-menu-item
                                    a(href="#").menu-link #{hd.title}
                            else
                                li.menu-item
                                    a(href="#").menu-link #{hd.title}
            .header_rt
                .header_box
                    .header_btn 
                        a.btn(href="")
                            span.btn-ic 
                                i.fas.fa-map-marker-alt
                            span.btn-text TÌM ĐẠI LÝ
                    .header_lang 
                        .header_lang--title 
                            .header_lang--title-wrap
                                p.note-text.cl-white VN
                        .header_lang--list 
                            .header_lang--item 
                                a(href="").header_lang--link 
                                    p.note-text VN
                            .header_lang--item 
                                a(href="").header_lang--link 
                                    p.note-text EN
                    .header_btn--search
                        .header_btn--search-ic.btn-search 
                            +img("searchIC.png")
.header_search--box
    .header_search.header_search--form
        form(action="") 
            .header_search--wrap 
                .header_search--logo 
                        +img("logoHD.png")
