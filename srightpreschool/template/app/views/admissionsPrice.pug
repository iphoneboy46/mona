extends layout/layout
block vars
    -title = 'tuyển sinh'
    -mainClass = 'pt'
    -bodyClass = ''
    -hdClass = ''

block container
    .banner_main
        .banner_main--bg
            .banner_main--img
                +img("bgMain.png")
        .container
            .banner_main--wrap
                .banner_main--box
                    .banner_main--box-top
                        h1.title-lg2.cl-white.t-center.t-up.fw-7 tuyển sinh
                    .banner_main--box-bottom
                        +breadcrumbs("Home","","Tuyển sinh")
    .tab.free-slide2 
        .container 
            .tab_wrap
                .tab_list.d-wrap 
                    .swiper.mySwiper 
                        .swiper-wrapper 
                            .swiper-slide.d-item
                                a(href="").tab_item Quy chế tuyển sinh
                            .swiper-slide.d-item
                                a(href="").tab_item Biểu phí & Quy định tài chính
                            .swiper-slide.d-item
                                a(href="").tab_item.actived Chương trình ưu đãi
                    .swiper-scrollbar
    section.admissions_price 
        .container 
            .admissions_price--wrap 
                .admissions_price--title 
                    h2.title-lg.cl-pri.fw-8.t-center.t-up HỌC PHÍ CHÍNH KHÓA
                    p.note-lg.t-center.cl-pri Năm học 2024-2025 tại SRIGHT Preschool bao gồm 12 tháng học (từ 01/06/2024 đến 30/05/2025)
