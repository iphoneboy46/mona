                            .swiper-slide.d-item
                                a(href="").tab_item Thực đơn
                            .swiper-slide.d-item
                                a(href="").tab_item Đồng phục
                            .swiper-slide.d-item
                                a(href="").tab_item Chăm sóc sức khoẻ
                    .swiper-scrollbar
    section.study_oneDay(data-aos="fade-up").free-slide 
        .container 
            .study_oneDay--wrap.d-wrap
                .swiper.mySwiper 
                    .swiper-wrapper     
                        .swiper-slide.d-item
                            a(href="./assets/images/stod.png" data-fancybox="gallery").study_oneDay--bg 
                                +img("stod.png")
                        .swiper-slide.d-item
                            a(href="./assets/images/stod.png" data-fancybox="gallery").study_oneDay--bg 
                                +img("stod.png")
                        .swiper-slide.d-item
