                        .banner_main--logo
                            +img("logoBn.svg")
                        p.note-banner Chào Mừng Bạn Đến Với Regiis Suites
                        h1.title-lg.cl-white.fl-sec.t-center.t-up PHÒNG
                    .banner_main--box-bottom
                        +breadcrumbs("Home","","PHÒNG")
    section.room_list
        .container
            .room_list--box
                .room_list--wrap.d-wrap
                    -
                        const rms = [
                                {
                                    img:"r.png",
                                    title:"Junior Suite",
                                    note:"At Circadian, we are committed to providing our  "
