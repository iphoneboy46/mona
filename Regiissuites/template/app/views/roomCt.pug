                                        li.utilities_lf--item.d-item.d-3
                                            .utilities_lf--item-wrap
                                                span.ic
                                                    +img("tic3.svg")
                                                p.note-text.cl-black2 2-4 people
                                        li.utilities_lf--item.d-item.d-3
                                            .utilities_lf--item-wrap
                                                span.ic
                                                    +img("tic1.svg")
                                                p.note-text.cl-black2 Area 100m2
                                        li.utilities_lf--item.d-item.d-3
                                            .utilities_lf--item-wrap
                                                span.ic
                                                    +img("tic2.svg")
                                                p.note-text.cl-black2 King’s bed
                                        li.utilities_lf--item.d-item.d-3
