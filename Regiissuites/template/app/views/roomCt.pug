                                        .find_room--item-ic
                                            +img("fric2.svg")
                            .find_room--item.d-item
                                .find_room--item-wrap
                                    .find_room--item-lf
                                        p.note-mn.cl-third.t-up TRẺ EM
                                        .find_room--item-op
                                            select.js-op(data-placeholder="Số lượng")
                                                option
                                                option(value="option1") 01
                                                option(value="option2") 02
                                                option(value="option3") 03
                                    .find_room--item-rt
                                        .find_room--item-ic
                                            +img("fric3.svg")
                            .find_room--item.d-item
                                .find_room--item-wrap
                                    +btn("Tìm phòng","","","")
